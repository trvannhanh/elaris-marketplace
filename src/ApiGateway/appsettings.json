{
  "ReverseProxy": {
    "Routes": {
      "identity": {
        "ClusterId": "identity_cluster",
        "Match": { "Path": "/identity/{**catch-all}" },
        "RateLimiterPolicy": "fixed",
        "Transforms": [
          { "PathRemovePrefix": "/identity" }
        ],
        "Metadata": {
          "OutputCachePolicy": "no-cache"
        }
      },
      "catalog": {
        "ClusterId": "catalog_cluster",
        "Match": { "Path": "/catalog/{**catch-all}" },
        "RateLimiterPolicy": "fixed",
        "Transforms": [
          { "PathRemovePrefix": "/catalog" }
        ],
        "Metadata": {
          "OutputCachePolicy": "catalog-cache"
        }
      },
      "order": {
        "ClusterId": "order_cluster",
        "Match": { "Path": "/order/{**catch-all}" },
        "RateLimiterPolicy": "fixed",
        "Transforms": [
          { "PathRemovePrefix": "/order" }
        ],
        "Metadata": {
          "OutputCachePolicy": "no-cache"
        }
      },
      "inventory": {
        "ClusterId": "inventory_cluster",
        "Match": { "Path": "/inventory/{**catch-all}" },
        "RateLimiterPolicy": "fixed",
        "Transforms": [
          { "PathRemovePrefix": "/inventory" }
        ]
      },
      "payment": {
        "ClusterId": "payment_cluster",
        "Match": { "Path": "/payment/{**catch-all}" },
        "RateLimiterPolicy": "fixed",
        "Transforms": [
          { "PathRemovePrefix": "/payment" }
        ],
        "Metadata": {
          "OutputCachePolicy": "no-cache"
        }
      },
      "basket": {
        "ClusterId": "basket_cluster",
        "Match": { "Path": "/basket/{**catch-all}" },
        "RateLimiterPolicy": "fixed",
        "Transforms": [
          { "PathRemovePrefix": "/basket" }
        ]
      }
    },
    "Clusters": {
      "identity_cluster": {
        "Destinations": {
          "d1": { "Address": "http://identityservice:8080" }
        }
      },
      "catalog_cluster": {
        "Destinations": {
          "d1": { "Address": "http://catalogservice:8080" }
        }
      },
      "order_cluster": {
        "Destinations": {
          "d1": { "Address": "http://orderservice:8080" }
        }
      },
      "inventory_cluster": {
        "Destinations": {
          "d1": { "Address": "http://inventoryservice:8080" }
        }
      },
      "payment_cluster": {
        "Destinations": {
          "d1": { "Address": "http://paymentservice:8080" }
        }
      },
      "basket_cluster": {
        "Destinations": {
          "d1": { "Address": "http://basketservice:8080" }
        }
      }
    }
  }

}
